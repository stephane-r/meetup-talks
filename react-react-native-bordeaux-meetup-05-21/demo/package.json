{
  "name": "my-app",
  "version": "0.0.1",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "extension": "yarn workspace @my-app/extension start",
    "android": "yarn workspace @my-app/mobile android",
    "ios": "yarn workspace @my-app/mobile ios",
    "studio": "yarn workspace @my-app/mobile studio",
    "test": "yarn workspaces run test",
    "web": "yarn workspace @my-app/web dev",
    "xcode": "yarn workspace @my-app/mobile xcode"
  },
  "devDependencies": {
    "@react-native-community/eslint-config": "2.0.0",
    "@typescript-eslint/eslint-plugin": "4.8.1",
    "@typescript-eslint/parser": "4.8.1",
    "eslint": "7.14.0",
    "eslint-config-airbnb-typescript": "12.0.0",
    "eslint-config-prettier": "6.15.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-prettier": "3.1.4",
    "eslint-plugin-react": "7.21.5",
    "eslint-plugin-react-hooks": "4.2.0",
    "husky": "4.3.0",
    "lint-staged": "10.5.1",
    "prettier": "2.2.0",
    "typescript": "4.1.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ],
    "*.{js,jsx,ts,tsx,json,html,md,css}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "react-query": "^3.16.0"
  }
}
